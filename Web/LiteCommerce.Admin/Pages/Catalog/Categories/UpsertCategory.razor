@page "/categories/add"
@page "/categories/edit/{id}"
@using LiteCommerce.Admin.Shared.Components

<PageTitle>@(IsEditMode ? "Edit Category" : "Add Category")</PageTitle>

<Breadcrumb Title="@(IsEditMode ? "Edit Category" : "Add Category")" BreadcrumbItems="breadcrumb"></Breadcrumb>

<div>
    <ul class="nav nav-underline" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#tab-info" role="tab">
                <span>General Information</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#tab-product" role="tab">
                <span>Products</span>
            </a>
        </li>
    </ul>

    <div class="tab-content border mt-2">
        <div class="tab-pane active" id="tab-info" role="tabpanel">
            <div class="card mb-0">
                <div class="card-body">
                    <EditForm Model="categoryForm" OnValidSubmit="FormSubmitted">
                        <DataAnnotationsValidator />
                        <div class="mb-3 row align-items-center">
                            <label for="name" class="form-label col-sm-2 col-form-label">Name <span class="text-danger">*</span></label>
                            <div class="col-sm-10">
                                <InputText id="name" class="form-control" @bind-Value="categoryForm.Name" autocomplete="off" placeholder="Ex: Accessories, Computers, Phones..." />
                                <ValidationMessage For="@(() => categoryForm.Name)" />
                            </div>
                        </div>
                        <div class="mb-3 row align-items-center">
                            <label for="meta-title" class="form-label col-sm-2 col-form-label">Meta title</label>
                            <div class="col-sm-10">
                                <InputText id="meta-title" class="form-control" @bind-Value="categoryForm.MetaTitle" autocomplete="off" />
                                <ValidationMessage For="@(() => categoryForm.MetaTitle)" />
                            </div>
                        </div>
                        <div class="mb-3 row align-items-center">
                            <label for="meta-keywords" class="form-label col-sm-2 col-form-label">Meta keywords</label>
                            <div class="col-sm-10">
                                <InputText id="meta-keywords" class="form-control" @bind-Value="categoryForm.MetaKeywords" autocomplete="off" />
                                <ValidationMessage For="@(() => categoryForm.MetaKeywords)" />
                            </div>
                        </div>
                        <div class="mb-3 row align-items-center">
                            <label for="meta-description" class="form-label col-sm-2 col-form-label">Meta description</label>
                            <div class="col-sm-10">
                                <InputTextArea id="meta-description" class="form-control" @bind-Value="categoryForm.MetaDescription" rows="4" autocomplete="off" />
                                <ValidationMessage For="@(() => categoryForm.MetaDescription)" />
                            </div>
                        </div>
                        <div class="mb-3 row align-items-center">
                            <label for="order" class="form-label col-sm-2 col-form-label">Parent category</label>
                            <div class="col-sm-10">
                                <InputSelect class="form-select" @bind-Value="categoryForm.ParentId">
                                    <option value="">None</option>
                                    @foreach (var category in basicCategories)
                                    {
                                        <option value="@category.Id">@category.DisplayName</option>
                                    }
                                </InputSelect>
                            </div>
                        </div>
                        <div class="mb-3 row align-items-center">
                            <label for="order" class="form-label col-sm-2 col-form-label">Description</label>
                            <div class="col-sm-10">
                                <InputTextArea id="description" class="form-control" @bind-Value="categoryForm.Description" rows="4" autocomplete="off" />
                                <ValidationMessage For="@(() => categoryForm.Description)" />
                            </div>
                        </div>
                        <div class="mb-3 row align-items-center">
                            <label for="order" class="form-label col-sm-2 col-form-label">Display order</label>
                            <div class="col-sm-10">
                                <InputNumber id="display-order" class="form-control" @bind-Value="categoryForm.DisplayOrder" autocomplete="off" />
                                <ValidationMessage For="@(() => categoryForm.DisplayOrder)" />
                            </div>
                        </div>
                        <div class="mb-3 row align-items-center">
                            <label for="order" class="form-label col-sm-2 col-form-label">Thumbnail</label>
                            <div class="col-sm-10">

                            </div>
                        </div>
                        <div class="mb-3 row">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <InputCheckbox class="form-check-input" id="IncludeInMenu" @bind-Value="categoryForm.IncludeInMenu" />
                                    <label class="form-check-label" for="IncludeInMenu">Include in Menu</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <InputCheckbox class="form-check-input" id="IsPublished" @bind-Value="categoryForm.IsPublished" />
                                    <label class="form-check-label" for="IsPublished">Is published</label>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-outline-primary d-inline-flex align-items-center">
                                <i class="ti ti-device-floppy fs-5 me-2"></i>
                                Save
                            </button>
                            <a href="/categories" class="btn btn-outline-warning d-inline-flex align-items-center">
                                <i class="ti ti-x fs-5 me-2"></i>
                                Cancel
                            </a>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
        <div class="tab-pane p-3" id="tab-product" role="tabpanel">
            <div class="row">
                <div class="col-md-12">
                    <h1>Products</h1>
                </div>
            </div>
        </div>
    </div>
</div>