@page "/brands"
@using BlazorTable
@using LiteCommerce.Admin.Models.Business
@using LiteCommerce.Admin.Shared.Components

<PageTitle>Brands</PageTitle>

<Breadcrumb Title="Brands" BreadcrumbItems="breadcrumb"></Breadcrumb>

<div class="mb-7 d-flex justify-content-end">
    <button type="button" class="justify-content-center d-flex align-items-center btn btn-rounded btn-primary" @onclick="ShowModal">
        <i class="ti ti-plus fs-5 me-2"></i>
        Add Brand
    </button>
</div>

<Table TableItem="Brand" Items="brands" PageSize="4" TableBodyClass="align-middle">
    <Column TableItem="Brand" Title="Name" Field="@(x => x.Name)" Sortable="true" Filterable="true" />
    <Column TableItem="Brand" Title="Is Published" Field="@(x => x.IsPublished)" Sortable="true" Filterable="true">
        <Template>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" disabled checked="@context.IsPublished">
            </div>
        </Template>
    </Column>
    <Column TableItem="Brand" Width="150px">
        <Template>
            <div class="button-group text-center">
                <button type="button" class="btn mb-0 bg-secondary-subtle btn-sm d-inline-flex align-items-center justify-content-center">
                    <i class="fs-5 ti ti-pencil"></i>
                </button>
                <button type="button" class="btn mb-0 bg-danger-subtle btn-sm d-inline-flex align-items-center justify-content-center">
                    <i class="fs-5 ti ti-trash"></i>
                </button>
            </div>
        </Template>
    </Column>
    <Pager ShowPageNumber="true" ShowTotalCount="true" />
</Table>

<div class="modal fade" id="addBrandModal" tabindex="-1" aria-labelledby="addBrandModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header modal-colored-header bg-success">
                <h5 class="modal-title text-white" id="addBrandModalTitle">Add Brand</h5>
                <button type="button" class="btn-close btn-close-white" @onclick="HideModal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-6 row align-items-center">
                    <label for="name" class="form-label col-sm-3 col-form-label">Brand name *</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="name" placeholder="Ex: Apple, Samsung, Nike, Adidas...">
                    </div>
                </div>
                <div class="mb-6 form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="IsPublished" checked="checked">
                    <label class="form-check-label" for="IsPublished">Brand is published</label>
                </div>
                <p class="mb-0">(*) Mandatory</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="justify-content-center d-flex align-items-center btn btn-outline-warning" @onclick="HideModal">
                    <i class="ti ti-x fs-5 me-2"></i>
                    Cancel
                </button>
                <button type="submit" class="justify-content-center d-flex align-items-center btn btn-outline-primary">
                    <i class="ti ti-device-floppy fs-5 me-2"></i>
                    Save
                </button>
            </div>
        </div>
    </div>
</div>